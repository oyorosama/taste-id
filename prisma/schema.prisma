// Prisma Schema for TasteID
// Run: npx prisma generate && npx prisma db push

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                  String       @id @default(cuid())
  username            String       @unique
  name                String?
  email               String?      @unique
  emailVerified       DateTime?
  image               String?
  accentColor         String       @default("#6366f1")
  bgTexture           String       @default("grain")
  bio                 String?
  onboardingCompleted Boolean      @default(false)
  accounts            Account[]
  sessions            Session[]
  collections         Collection[]
  savedItems          SavedItem[]
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
}

model Collection {
  id         String   @id @default(cuid())
  name       String
  type       String   // movie, music, game, anime, book
  position   Int      // 0-8 for 3x3 grid
  coverImage String?
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items      Item[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
}

model Item {
  id           String     @id @default(cuid())
  externalId   String
  type         String     // movie, tv, music, game, anime
  title        String
  image        String?
  year         String?
  rating       Float?     // User's rating (0-10)
  review       String?    // User's short opinion
  // Type-specific metadata stored as JSON string
  metadata     String?    // { studio: "...", developer: "...", etc. }
  collectionId String
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  position     Int
  createdAt    DateTime   @default(now())

  @@index([collectionId])
}

model SavedItem {
  id         String   @id @default(cuid())
  externalId String
  type       String
  title      String
  image      String?
  metadata   String?  // Type-specific metadata as JSON
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  savedAt    DateTime @default(now())

  @@unique([userId, externalId, type])
  @@index([userId])
}
